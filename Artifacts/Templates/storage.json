{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "storageAccountName": {
      "type": "string",
      "minLength": 1
    },
    "enableAdlsGen2": {
      "type": "bool",
      "defaultValue": false
    },
    "virtualNetworkSubnetId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Optional parameter. If specified, virtual network rule is added for the virtual network subnet specified (subnet musht have storage service endpoint enabled)."
      }
    }
  },
  "variables": {
    "emptyArray": [],
    "virtualNetworkRule": {
      "id": "[parameters('virtualNetworkSubnetId')]"
    },
    "virtualNetworkRules": "[if(not(empty(parameters('virtualNetworkSubnetId'))), array(variables('virtualNetworkRule')), variables('emptyArray'))]"
  },
  "resources": [
    {
      "name": "[parameters('storageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[parameters('location')]",
      "apiVersion": "2018-07-01",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "storageAccount"
      },
      "kind": "StorageV2",
      "properties": {
        "isHnsEnabled": "[parameters('enableAdlsGen2')]",
        "supportsHttpsTrafficOnly": true,
        "networkAcls": {
          "defaultAction": "[if(not(empty(parameters('virtualNetworkSubnetId'))), 'Deny', 'Allow')]",
          "virtualNetworkRules": "[variables('virtualNetworkRules')]"
        }
      }
    }
  ],
  "outputs": {
    "storageAccountKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2016-01-01').keys[0].value]"
    },
    "storageAccountConnectionString": {
      "type": "string",
      "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2016-01-01').keys[0].value)]"
    }
  }
}
