{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "diagnosticStorageName": {
            "type": "string"
        },
        "blobStorageName": {
            "type": "string"
         },
        "namespacesalixeventhub": {
            "type": "string"    
        },
        "_artifactsLocation": {
            "type": "string"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring"
        }
    },
    "variables": {
        "storageTemplate": "/Artifacts/Templates/storage.json",
        "blobTemplate": "/Artifacts/Templates/blobstorage.json",
        "eventhubTemplate": "/Artifacts/Templates/eventhub.json"
    },
    "resources": [
        {
            "name": "diagnosticStorage",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), variables('storageTemplate'), parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('diagnosticStorageName')]"
                    },
                    "storageAccountType": {
                        "value": "Standard_LRS"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "name": "blobStorage",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), variables('blobTemplate'), parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('blobStorageName')]"
                 
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },      
            {
            "name": "[parameters('namespacesalixeventhub')]",
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "2021-06-01-preview",
             "location": "[parameters('location')]",
            
            "sku": {
                "name": "Basic",
                "tier": "Basic",
                "capacity": 1
            },
            "properties": {

                "disableLocalAuth": false,
                "zoneRedundant": false,
                "isAutoInflateEnabled": false,
                "maximumThroughputUnits": 0,
                "kafkaEnabled": false,
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), variables('eventhubTemplate'), parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
            "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "namespaces_alix_eventhub_ns_name": {
                        "value": "[parameters('namespacesalixeventhub')]"

               }          
            }
            
        }
    }

    ],
    "outputs": {}
}

